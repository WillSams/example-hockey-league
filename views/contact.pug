extends layouts/default
    
block content
  #contact-content
    section
      .col-lg-8.mx-auto.rounded 
        if inquirySubmitted
          h3.center-block Thanks for getting in touch, we will respond as soon as possible.
        else 
          h2.text-center.text-uppercase Contact Us
          form(method='post' novalidate='novalidate')
            input(type='hidden' name='action', value='contact')
            .control-group
              .form-group.floating-label-form-group.controls.mb-0.pb-2
                label Name
                input.form-control(type='text' name='name' value=formData.name placeholder='Name' required='required' data-validation-required-message='Please enter your name.')
                p.help-block.text-danger                
            
            .control-group
              .form-group.floating-label-form-group.controls.mb-0.pb-2
                label Email Address
                input.form-control(type='email' name='email' value=formData.email placeholder='Email Address' required='required' data-validation-required-message='Please enter your email address.')
                p.help-block.text-danger                
            
            .control-group
              .form-group.floating-label-form-group.controls.mb-0.pb-2
                label Phone Number
                input.form-control(type='tel' name='phone' value=formData.phone placeholder='Phone Number' required='required' data-validation-required-message='Please enter your phone number.')
                p.help-block.text-danger                
            
            .control-group
              .form-group.floating-label-form-group.controls.mb-0.pb-2
                label Message
                textarea.form-control(name='message' value=formData.message rows='5' placeholder='Message' required='required' data-validation-required-message='Please enter a message.')
                p.help-block.text-danger                                
            
            .control-group
              .form-group.center-block
                #success(style='white-space:pre;')
                button.btn.btn-primary.btn-xl(type='submit') Send        

block js
  script(src='https://cdnjs.cloudflare.com/ajax/libs/jqBootstrapValidation/1.3.7/jqBootstrapValidation.min.js')
